---
const { title, description, skills } = Astro.props as {
    title: string;
    description: string;
    skills: string[];
};
---

<header>
    <img
        loading="eager"
        class="w-full h-70 object-cover rounded-md mb-8"
        src="/images/custem-journeys/custem-journeys-homepage-mobile-mockup.avif"
        alt="Mobile phone showing the cuSTEM Journeys podcast website homepage"
    />
    <h1>{title}</h1>
    <p class="text-gray-500 mb-4">{description}</p>
    <ul class="flex gap-2 text-xs leading-none">
        {
            skills.map((skill) => (
                <li class="px-3 py-1 bg-gray-200 rounded-full">{skill}</li>
            ))
        }
    </ul>
</header>
